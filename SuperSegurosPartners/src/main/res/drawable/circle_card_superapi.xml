<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/white1_superapi"
                android:centerColor="@color/white1_superapi"
                android:endColor="@color/white1_superapi"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="@color/purple1_superapi" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>

</selector>