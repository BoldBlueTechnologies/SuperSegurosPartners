<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_superapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue5_superapi"
        android:minHeight="?attr/actionBarSize"
        android:elevation="5dp"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/purple1_superapi"
                android:text="@string/vinculaTuPoliza_superapi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black1_superapi"
                android:text="@string/accedeConTuCorrreoOSiTienes_superapi"/>


            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:id="@+id/btnContinuarSuperApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple1_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/continuar_superapi"
                    android:textColor="@color/white1_superapi"
                    android:textSize="17sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>