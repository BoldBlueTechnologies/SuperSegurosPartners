<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_superapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue5_superapi"
        android:minHeight="?attr/actionBarSize"
        android:elevation="5dp"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_color_color_superapi"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/purple1_superapi"
                android:text="@string/pagoDeTuPoliza_superapi"/>
            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/blue1_superapi"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_tipoCobertura_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="@string/vacio_superapi"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple1_superapi"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="@string/estasAUnPasoDeObtenerTuSeguroPor_superapi"
                        android:textColor="@color/white1_superapi"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/txt_Precio_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="@string/vacio_superapi"
                        android:textColor="@color/purple1_superapi"
                        android:textSize="30sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/realizaElPagoDeTuSeguroAseguraTuAuto_superapi"
                android:textColor="@color/black1_superapi"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/resumenDeCompra_superapi"
                android:textColor="@color/black1_superapi"
                android:textSize="20sp" />
            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white1_superapi"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/pago_superapi"
                            android:textColor="@color/black1_superapi"
                            android:textSize="17sp" />
                        <TextView
                            android:id="@+id/txtPago_superapi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/vacio_superapi"
                            android:textColor="@color/black1_superapi"
                            android:textSize="15sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:orientation="vertical"
                            android:background="@color/grey1_superapi"/>

                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/auto_superapi2"
                        android:textColor="@color/black1_superapi"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/txtAuto_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/vacio_superapi"
                        android:textColor="@color/black1_superapi"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="vertical"
                        android:background="@color/grey1_superapi"/>

                </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/aseguradora_superapi"
                        android:textColor="@color/black1_superapi"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/txtAseguradora_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/vacio_superapi"
                        android:textColor="@color/black1_superapi"
                        android:textSize="15sp" />
                </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white1_superapi"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/agregaTuTarjeta_superapi"
                        android:textColor="@color/purple1_superapi"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/nombreEnLaTarjeta_superapi"
                            android:textColor="@color/black1_superapi"
                            android:textSize="13sp" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:backgroundTint="@color/grey1_superapi">
                            <LinearLayout
                                android:layout_margin="2dp"
                                android:background="@color/white1_superapi"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <EditText
                                    android:background="@color/transparent_superapi"
                                    android:id="@+id/txtNombreTarjetaSuperApi"
                                    android:layout_marginStart="12dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/nombreComoApareceEnLaTarjeta_superapi"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="15sp"
                                    android:textColorHint="@color/grey2_superapi"
                                    android:textColor="@color/grey2_superapi"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/numeroDeTarjeta_superapi"
                            android:textColor="@color/black1_superapi"
                            android:textSize="13sp" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:backgroundTint="@color/grey1_superapi">
                            <LinearLayout
                                android:layout_margin="2dp"
                                android:background="@color/white1_superapi"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <EditText
                                    android:background="@color/transparent_superapi"
                                    android:id="@+id/txtNumeroTarjetaSuperApi"
                                    android:layout_marginStart="12dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ceros_superapi"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="15sp"
                                    android:textColorHint="@color/grey2_superapi"
                                    android:textColor="@color/grey2_superapi"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/expiracion_superapi"
                                android:textColor="@color/black1_superapi"
                                android:textSize="13sp" />
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="4dp"
                                android:backgroundTint="@color/grey1_superapi">
                                <LinearLayout
                                    android:layout_margin="2dp"
                                    android:background="@color/white1_superapi"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <EditText
                                        android:background="@color/transparent_superapi"
                                        android:id="@+id/txtExpiracionTarjetaSuperApi"
                                        android:layout_marginStart="12dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/MMAA_superapi"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:textSize="15sp"
                                        android:textColorHint="@color/grey2_superapi"
                                        android:textColor="@color/grey2_superapi"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/codigoDeSeguridad_superapi"
                                android:textColor="@color/black1_superapi"
                                android:textSize="13sp" />
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="4dp"
                                android:backgroundTint="@color/grey1_superapi">
                                <LinearLayout
                                    android:layout_margin="2dp"
                                    android:background="@color/white1_superapi"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <EditText
                                        android:background="@color/transparent_superapi"
                                        android:id="@+id/txtCVVTarjetaSuperApi"
                                        android:layout_marginStart="12dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/cvv_superapi"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:textSize="15sp"
                                        android:textColorHint="@color/grey2_superapi"
                                        android:textColor="@color/grey2_superapi"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/pagoEncriptadoYSeguro_superapi"
                        android:textColor="@color/black1_superapi"
                        android:textSize="15sp" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/consultaElReciboDePagoQueEnviamosATuCorreo_superapi"
                        android:textColor="@color/black1_superapi"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white1_superapi"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/requieroFactura_superapi"
                            android:textColor="@color/black1_superapi"
                            android:textSize="17sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/vacio_superapi"
                            android:textColor="@color/black1_superapi"
                            android:textSize="15sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:orientation="vertical"
                            android:background="@color/grey1_superapi"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:id="@+id/btnContinuarSuperApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple1_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/continuar_superapi"
                    android:textColor="@color/white1_superapi"
                    android:textSize="17sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>