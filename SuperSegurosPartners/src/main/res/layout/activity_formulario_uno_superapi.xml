<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue5_superapi"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_superapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue5_superapi"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:elevation="5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_color_color_superapi"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_superapi"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/purple1_superapi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cotizaTuSeguroDeAuto_superapi"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black1_superapi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seleccionaElAnoMarcaModelo_superapi"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black1_superapi"/>
            <LinearLayout
                android:id="@+id/itemTipoSuperApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipoDeAuto_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/black1_superapi"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTipoSuperApi"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/grey1_superapi">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="@color/white1_superapi"                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtTipoSuperApi"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/autoOPickup_superapi"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/grey2_superapi"/>
                        <LinearLayout
                            android:background="@color/white1_superapi"
                            android:layout_width="45dp"
                            android:backgroundTint="@color/purple1_superapi"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:rotation="270"
                                android:src="@drawable/back_superapi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/itemAnoSuperApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ano_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/black1_superapi"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAnoSuperApi"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/grey1_superapi">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="@color/white1_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtAnoSuperApi"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/seleccionaElAnoDeTuAuto_superapi"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/grey2_superapi"/>
                        <LinearLayout
                            android:background="@color/white1_superapi"
                            android:layout_width="45dp"
                            android:backgroundTint="@color/purple1_superapi"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:rotation="270"
                                android:src="@drawable/back_superapi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/itemMarcaSuperApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/marca_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/black1_superapi"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMarcaSuperApi"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/grey1_superapi">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="@color/white1_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtMarcaSuperApi"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/seleccionaLaMarcaDeTuAuto_superapi"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/grey2_superapi"/>
                        <LinearLayout
                            android:background="@color/white1_superapi"
                            android:layout_width="45dp"
                            android:backgroundTint="@color/purple1_superapi"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:rotation="270"
                                android:src="@drawable/back_superapi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemModeloSuperApi"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modelo_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/black1_superapi"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardModeloSuperApi"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/grey1_superapi">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="@color/white1_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtModeloSuperApi"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/seleccionaElModeloDeTuAuto_superapi"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/grey2_superapi"/>
                        <LinearLayout
                            android:background="@color/white1_superapi"
                            android:layout_width="45dp"
                            android:backgroundTint="@color/purple1_superapi"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:rotation="270"
                                android:src="@drawable/back_superapi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/itemVersionSuperApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/black1_superapi"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardVersionSuperApi"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/grey1_superapi">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="@color/white1_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:id="@+id/txtVersionSuperApi"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/seleccionaLaVersionDeTuAuto_superapi"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/grey2_superapi"/>
                        <LinearLayout
                            android:background="@color/white1_superapi"
                            android:layout_width="45dp"
                            android:backgroundTint="@color/purple1_superapi"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:rotation="270"
                                android:src="@drawable/back_superapi"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemCPSuperApi"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/codigoPostal_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/black1_superapi"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCPSuperApi"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/grey1_superapi">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="@color/white1_superapi"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/txtCPSuperApi"
                            android:layout_weight="1"
                            android:maxLength="5"
                            android:layout_marginStart="12dp"
                            android:background="@color/transparent_superapi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/escribeTuCP_superapi"
                            android:textColorHint="@color/grey1_superapi"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:textColor="@color/grey2_superapi"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:visibility="gone"
                android:id="@+id/btnCotizaSuperApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <TextView
                    android:background="@color/purple1_superapi"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white1_superapi"
                    android:text="@string/cotizarSeguro_superapi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="17sp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>