<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue3_superapi"
        android:minHeight="?attr/actionBarSize"
        android:elevation="5dp"
        android:theme="?attr/actionBarTheme"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/blue3_superapi"
                android:gravity="center"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/logo_blanco_superapi"/>
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="38sp"
                    android:text="@string/laProteccionQue_superapi"
                    android:textColor="@color/white1_superapi"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18sp"
                    android:text="@string/conCoberturasQue_superapi"
                    android:textColor="@color/white1_superapi"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/superautos_superapi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/blue5_superapi"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:text="@string/tuSeguroDesde_superapi"
                    android:textColor="@color/purple1_superapi"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="30sp"
                    android:text="@string/disfrutaCadaViaje_superapi"
                    android:textColor="@color/black1_superapi"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnCotiza"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:background="@color/purple1_superapi"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white1_superapi"
                        android:text="@string/cotizaTuSeguro_superapi"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="17sp"/>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/cintillo_superapi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white1_superapi"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:text="@string/estoEsLoQue_superapi"
                    android:textColor="@color/purple1_superapi"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="30sp"
                    android:text="@string/queCubreElSeguro_superapi"
                    android:textColor="@color/black1_superapi"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18sp"
                    android:text="@string/coberturas_superapi"
                    android:textColor="@color/black1_superapi"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="425dp"
                    android:layout_marginTop="45dp"
                    android:background="@color/white1_superapi"
                    android:foregroundGravity="center">
                </androidx.viewpager.widget.ViewPager>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white1_superapi"
                    app:tabSelectedTextColor="@color/purple1_superapi"
                    app:tabIndicatorColor="@color/purple1_superapi"
                    app:tabTextColor="@color/purple1_superapi"
                    app:tabMode="fixed"
                    app:tabGravity="center" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white1_superapi"
                android:padding="16dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnConoce"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:background="@color/blue1_superapi"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white1_superapi"
                        android:text="@string/conoceADetalleLasCoberturas_superapi"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="17sp"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>